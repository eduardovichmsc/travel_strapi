{
  "kind": "collectionType",
  "collectionName": "tours",
  "info": {
    "singularName": "tour",
    "pluralName": "tours",
    "displayName": "Tour"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "short_description": {
      "type": "text"
    },
    "description": {
      "type": "richtext",
      "required": false
    },
    "bannerImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "duration": {
      "type": "string"
    },
    "availability": {
      "type": "string"
    },
    "rating": {
      "type": "decimal"
    },
    "reviews": {
      "type": "decimal"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "difficulty": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::difficulty.difficulty",
      "inversedBy": "tours"
    },
    "locations": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::location.location",
      "inversedBy": "tours"
    },
    "activity": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::activity.activity",
      "inversedBy": "tours"
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "whatIsIncluded": {
      "type": "component",
      "component": "shared.list-item",
      "repeatable": true
    },
    "whatToBring": {
      "type": "component",
      "component": "shared.list-item",
      "repeatable": true
    },
    "groupSize": {
      "type": "decimal"
    },
    "minimumAge": {
      "type": "decimal"
    },
    "departsFrom": {
      "type": "string"
    },
    "highlights": {
      "type": "component",
      "component": "shared.list-item",
      "repeatable": true
    }
  }
}
